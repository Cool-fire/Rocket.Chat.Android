<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:paddingStart="16dp"
    android:paddingTop="6dp"
    android:paddingEnd="16dp"
    android:paddingBottom="6dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_app"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:roundedCornerRadius="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_app"
        style="@style/Sender.Name.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawablePadding="8dp"
        app:layout_constraintLeft_toRightOf="@+id/image_app"
        app:layout_constraintTop_toTopOf="@+id/image_app"
        tools:text="frvr BasketBall" />

    <TextView
        android:id="@+id/text_app_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawablePadding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_app"
        app:layout_constraintLeft_toRightOf="@+id/image_app"
        app:layout_constraintTop_toBottomOf="@+id/text_app"
        tools:text="This is frvr basketball game" />
</androidx.constraintlayout.widget.ConstraintLayout>